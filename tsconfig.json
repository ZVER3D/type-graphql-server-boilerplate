{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
